{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "types": ["vitest/globals"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "@images/*": ["./public/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "frontend/.next/types/**/*.ts",
        "frontend/.next/dev/types/**/*.ts",
        "**/*.mts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "postcss.config.js"
    ],
    "exclude": ["node_modules"]
}
